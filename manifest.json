{
  "manifest_version": 3,
  "name": "GitLab Auto Reviewer",
  "version": "1.0.2",
  "description": "GitLab MR 생성 시 리뷰어를 자동으로 추가하는 확장 프로그램",
  "icons": {
    "128": "icons/gitlab-auto-reviewer-icon-128.png"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://gitlab.com/*",
    "https://*.gitlab.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/gitlab-auto-reviewer-icon-128.png",
    "default_title": "GitLab Auto Reviewer 설정"
  },
  "content_scripts": [
    {
      "matches": [
        "https://gitlab.com/*/merge_requests/new*",
        "https://gitlab.com/*/merge_requests/*/edit*",
        "https://*.gitlab.com/*/merge_requests/new*",
        "https://*.gitlab.com/*/merge_requests/*/edit*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}
